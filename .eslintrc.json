{
  "extends": "nebenan",
  "root": true,
  "overrides": [{
    "files": ["**/*.test.js", "**/*.test.jsx"],
    "env": {
      "mocha": true
    },
    "rules": {
      "no-unused-expressions": "off"
    }
  }],
  "rules": {
    "import/extensions": ["error", "never", {
      "json": "always"
    }]
  }
}
