{
  "source": ["tokens/**/design-tokens.*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "files": [{
        "destination": "lib/_index.css",
        "format": "css/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "files": [{
        "destination": "lib/index.js",
        "format": "javascript/es6"
      }]
    }
  }
}
