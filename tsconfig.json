{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "esnext", 
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true, 
    "moduleResolution":"node",
  },
  "exclude": [
    "**/node_modules", 
    "**/.*/",
    "**/lib"
  ]
}
